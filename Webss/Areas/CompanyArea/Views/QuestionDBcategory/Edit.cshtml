@model QuestionDBCategory
<div class="col-6">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Edit QuestionDBCategory </h5>

            <!-- Vertical Form -->
            <form asp-action="Edit" class="row g-3">
                <input type="hidden" asp-for="QuestionDBCategoryID"/>
                <div class="col-12">
                    <label asp-for="QuestionDBCategoryName" class="form-label">
                    </label>
                    <input asp-for="QuestionDBCategoryName" class="form-control" />

                </div>


                <div class="mt-3">

                    <div class="col-12">
                        <label class="form-label">  Select Company</label>
                        <select class="form-select" asp-for="CompanyID" asp-items="@ViewBag.companies">
                            <option>Select Select Company</option>
                        </select>

                    </div>
                </div>




                <div class="mt-3">
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                </div>
            </form><!-- Vertical Form -->

        </div>
    </div>
</div>
