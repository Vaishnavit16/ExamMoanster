@model Question

<div class="col-6">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Create Question </h5>

            <!-- Vertical Form -->
            <form asp-action="Create" method="post" class="row g-3">

                <div class="mt-3">

                    <div class="col-12">
                        <label class="form-label">  Select QuestionBank</label>
                        <select class="form-select" asp-for="QuestionBankID" asp-items="@ViewBag.questionbanks">
                            <option>Select QuestionBank </option>
                        </select>

                    </div>
                </div>
                <div class="col-12">
                    <label asp-for="QuestionTitle" class="form-label">
                    </label>
                    <input asp-for="QuestionTitle" class="form-control" />

                </div>

                <div class="col-12">
                    <label asp-for="IsObjective" class="form-label">
                    </label>
                    <input asp-for="IsObjective" class="form-control" />

                </div>


                



               <div class="mt-3">
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
               </div>
            </form><!-- Vertical Form -->

        </div>
    </div>
</div>
