@using Domain
@model MockTest

@{
    ViewData["Title"] = "Start";
}

<h1></h1>


<h3 style="text-align:center"><b>MockTest Details</b></h3>
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-md-12">
            <dl class="row">

                <dt class="col-sm-2">
                    MockTestName
                </dt>
                <dd class="col-sm-10">
                    @Model.MockTestName
                </dd>
                <dt class="col-sm-2">
                    SubjectTitle
                </dt>
                <dd class="col-sm-10">
                    @Model.MockTestSubject.SubjectTitle
                </dd>
                <dt class="col-sm-2">
                    NoOfQuestions
                </dt>
                <dd class="col-sm-10">
                    @Model.NoofQuestion
                </dd>
                <dt class="col-sm-2">
                    MarkPerQuestion
                </dt>
                <dd class="col-sm-10">
                    @Model.MarksPerQuestion
                </dd>
                <dt class="col-sm-2">
                    IsNegative
                </dt>
                <dd class="col-sm-10">

                    @if (@Model.IsNegavtive == true)
                    {
                        @: Yes
                    }
                    else
                    {
                        @: No
                    }
                </dd>
                <dt class="col-sm-2">
                    PassingMarks
                </dt>
                <dd class="col-sm-10">
                    @Model.PassingMarks
                </dd>
            </dl>
        </div class="mt-3">
        
            <a asp-action="StartTest" asp-route-id="@Model.MockTestID" class="btn btn-primary">Start</a>
     
    &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>

            </div>

   
    