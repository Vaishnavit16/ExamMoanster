@model EditProfileDto

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Edit Profile</h5>


        <!-- Vertical Form -->
        <form asp-action="EditProfile" method="post" class="row g-3">
            <div class="col-12">
                <div class="alert alert-info">
                    @ViewBag.Message
                </div>
            </div>
            
            <div class="col-12">
                <label asp-for="Address"> Address </label>
                <textarea asp-for="Address" class="form-control">
                </textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="DateOfBirth">DateOfBirth </label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
           @*  <div class="col-12">
                <label asp-for="Gender">Gender </label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div> *@

           
            <div class="mt-3">
                <div class="col-12">
                    <label class="form-label">  Select Gender</label>
                    <select class="form-select" asp-for="Gender" asp-items="@ViewBag.genders">
                        <option>Select  Gender</option>
                    </select>

                </div>
            </div>
            <div class="mt-3">

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </div>

        </form><!-- Vertical Form -->

    </div>
</div>