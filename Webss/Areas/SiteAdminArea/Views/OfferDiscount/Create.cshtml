@model OfferDiscount
<div class="col-6">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Create OfferDiscount </h5>

            <!-- Vertical Form -->
            <form asp-action="Create" class="row g-3">
                <div class="col-12">
                    <label asp-for="OfferTitle" class="form-label">
                    </label>
                    <input asp-for="OfferTitle" class="form-control" />
                    
                </div>

                <div class="col-12">
                    <label asp-for="ApplicableTo" class="form-label">
                    </label>
                    <input asp-for="ApplicableTo" class="form-control" />

                </div>


                <div class="col-12">
                    <label asp-for="ToFromDate" class="form-label">
                    </label>
                    <input asp-for="ToFromDate" class="form-control" />

                </div>

                <div class="col-12">
                    <label asp-for="DiscountAmount" class="form-label">
                    </label>
                    <input asp-for="DiscountAmount" class="form-control" />

                </div>
                <div class="col-12">
                    <label asp-for="Ispercentile" class="form-label">
                    </label>
                    <input asp-for="Ispercentile" class="form-control" />

                </div>
              
           <div class="mt-3">
    
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div></div>
            </form><!-- Vertical Form -->

        </div>
    </div>
</div>