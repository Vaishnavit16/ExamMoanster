@model MockTestQuestion
<div class="col-6">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Create MockTestQuestion </h5>

            <!-- Vertical Form -->
            <form asp-action="Create" class="row g-3">

                <div class="mt-3">

                    <div class="col-12">
                        <label class="form-label">  Select MockTestSubject</label>
                        <select class="form-select" asp-for="MockTestSubjectID" asp-items="@ViewBag.Msubject">
                            <option>Select MockTestSubject </option>
                        </select>

                    </div>
                </div>
                <div class="col-12">
                    <label asp-for="Questions" class="form-label">
                    </label>
                    <input asp-for="Questions" class="form-control" />

                </div>

                
                <div class="mt-3">
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                </div>
            </form><!-- Vertical Form -->

        </div>
    </div>
</div>
