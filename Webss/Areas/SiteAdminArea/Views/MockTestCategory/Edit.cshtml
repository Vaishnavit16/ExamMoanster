@model MockTestCategory
<div class="col-6">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Create MockTestCategory </h5>

            <!-- Vertical Form -->
            <div class="col-10">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Edit" class="row g-3">
                            <input type="hidden" asp-for="MockTestCategoryID" />
                            <div class="col-12">
                                <label asp-for="MockTestCategoryName" class="form-label">
                                </label>
                                <input asp-for="MockTestCategoryName" class="form-control" />

                            </div>


                            <div class="mt-3">

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                    <button type="reset" class="btn btn-secondary">Reset</button>
                                </div>
                            </div>
                        </form><!-- Vertical Form -->
                    </div>
                </div></div>

        </div>
    </div>
</div>